<html lang='pt-br'>
    <head>
        <meta charset="utf-8">
        <link rel="shortcut icon" type="image/x-icon" href="/images/logo.ico">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link type="text/css" rel="stylesheet" href="/styles/App.css">
        <title>Faça seu pedido</title>
    </head>
    <header>
        <%- include('../partials/menu.ejs') %>
    </header>

    <body>
       
        <div class="container-fluid">
        
            <h1>Faça seu pedido</h1>
            <hr />

            <div class="container-fluid text-center col-lg-8 mx-auto">
                <hr> 
                <hr> 
                 <%if(validacao){%>
                     <% for(i=0;i<validacao.errors.length; i++){%>
                         <p>
                             <%=validacao.errors[i].msg %>
                         </p>
                     <%}%>
                 <%}%>
                 <hr> 
                 <hr> 
             </div>
         
            <div class="col-lg-8 mx-auto">
                <form method='post' action='/pedidos'> 
                    <section class="container-fluid">
                        <div class="form-group-sm">
                            <label>Nome do cliente:</label> 
                            <input class="form-control" type="text" name="cliente" value="<%=dados.nome_cliente%>" placeholder="digite seu nome...">
                        </div>
                        <div class="form-group-sm"> 
                            <label>Endereço:</label> 
                            <input class="form-control" type="text" name="endereço" value="<%=dados.endereço%>" placeholder="digite seu endereço...">
                        </div>
                        <div class="form-group-sm"> 
                            <label>Telefone:</label> 
                            <input class="form-control" type="text" name="telefone" value="<%=dados.telefone%>" placeholder="digite seu telefone...">
                        </div>
                        <div class="form-group-sm"> 
                            <label>Nome do produto:</label> <br>
                            <select class="col-lg-12" name="nome_produto" value="<%=dados.nome_produto%>">
                                <option value="">Escolha uma opção</option>
                                <option value="Geladeira 1">Geladeira 1</option>
                                <option value="Geladeira 2">Geladeira 2</option>
                                <option value="Geladeira 3">Geladeira 3</option>
                                <option value="Fogão 1">Fogão 1</option>
                                <option value="Fogão 2">Fogão 2</option>
                                <option value="Micro-ondas 1">Micro-ondas 1</option>
                                <option value="Micro-ondas 2">Micro-ondas 2</option>
                                <option value="Micro-ondas 3">Micro-ondas 3</option>
                                <option value="Lava-louça 1">Lava-louça 1</option>
                                <option value="Lava-louça 2">Lava-louça 2</option>
                                <option value="Lavadora de roupas 1">Lavadora de roupas 1</option>
                                <option value="Lavadora de roupas 2">Lavadora de roupas 2</option>
                            </select><br> 
                        </div>
                        <div class="form-group-sm">   
                            <label>Valor unitário:</label> 
                            <input class="form-control" type="float" name="valor_unitario" value="<%=dados.valor_unitario%>" placeholder="digite um valor em reais...">  
                        </div>
                        <div class="form-group-sm"> 
                            <label>Quantidade: </label> 
                            <input class="form-control" type="text" name="quantidade" value="<%=dados.quantidade%>" placeholder="digite um número inteiro...">
                        </div>
                        <div class="form-group-sm"> 
                            <button class="col-lg-12 btn btn-success" type="submit">Cadastrar pedido</button><br><br> 
                            <button class="col-lg-12 btn btn-info" type="reset">Limpar dados</button><br><br>   
                        </div>
                    </section>
                </form> 
            </div>
        </div>
    </body>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>

</html>



    
