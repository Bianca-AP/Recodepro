<html lang='pt-br'>
    <head>
        <meta charset="utf-8" />
        <link rel="shortcut icon" type="image/x-icon" href="/images/logo.ico">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link type="text/css" rel="stylesheet" href="/styles/App.css">
        <title>Fale conosco</title>
    </head>
    <header>
        <%- include('../partials/menu.ejs') %>
    </header>
    
    <body>
        <div class="container-fluid" id="fale">
        
            
            <h1>Fale conosco</h1>
          

            <hr/>
            <div>  
            <section class="container"> 
                <div class="row col-lg-8 mx-auto">
                    <div class="col pr-5">
                        <img width="40px" src="/images/email.jpg" alt="Email"/>contato@fullstackeletrobianca.com
                    </div>
                    <div class="col pl-5 col-lg-4 mx-auto">
                        <img width="40px" src="/images/whatsapp.jpg" alt="Whatsapp"/>(11) 99999-9999
                    </div>
                </div>
            </section>
           
        </div>


        <div class="container-fluid text-center col-lg-8 mx-auto">
            <hr><hr> 
            <%if(validacao){%>
                <% for(i=0;i<validacao.errors.length; i++){ %>
                    <p>
                        <%=validacao.errors[i].msg %>
                    </p>
                <%}%>
            <%}%>
            <hr><hr> 
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" action='/fale_conosco'>
                <section class="container-fluid">
                    <div class="form-group-sm">
                        <label>Nome:</label>
                        <input class= "form-control" name="nome" value="<%=dados.nome%>" type="text" placeholder="digite seu nome..."/>
                    </div>
                    <div class="form-group-sm">  
                        <label>Mensagem:</label>
                        <textarea class= "form-control" name="mensagem" value="<%=dados.mensagem%>" placeholder="digite sua mensagem..."></textarea>
                    </div>
                    <div class="form-group-sm">
                        <button class="col-lg-12 btn btn-success" type="submit">Enviar mensagem e ver outras deixadas por nossos clientes</button> <br/><br/>
                        <button class="col-lg-12 btn btn-info" type="reset">Limpar dados</button><br><br>   
                    </div>
                </section>
            </form>  
        </div>
    </body>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>

</html>





